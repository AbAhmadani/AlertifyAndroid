<!-- res/drawable/alert_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set transparent for the fill -->
            <stroke
                android:width="1dp"
                android:color="@color/success_dark" /> <!-- Border color and width -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Inner background layer -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/success_light" /> <!-- Inner background color -->
            <corners android:radius="8dp" /> <!-- Same corner radius as border -->
        </shape>
    </item>
</layer-list>
